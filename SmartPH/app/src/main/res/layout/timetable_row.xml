<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    android:orientation="horizontal"
    app:cardElevation="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="left"
        android:orientation="vertical">
        <TextView
            android:id="@+id/timetable_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/timetable_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="right|center"
        android:paddingRight="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/export_timetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:src="@drawable/reply_black_24dp"
            android:paddingRight="20dp"
            android:text="export this timetable" />

        <ImageView
            android:id="@+id/delete_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:src="@drawable/clear_black_24dp"
            android:text="delete this timetable" />
    </LinearLayout>
</androidx.cardview.widget.CardView>