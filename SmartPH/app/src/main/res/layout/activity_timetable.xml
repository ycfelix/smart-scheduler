<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".TimetableActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Timetable"
            android:textColor="#fff"
            android:textSize="16sp"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/timetable_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_anchor="@+id/timetable"
        app:layout_anchorGravity="center">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/load_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />

        <Button
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear" />

        <Button
            android:id="@+id/match_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/swipe_timetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
        <android.support.v4.view.ViewPager
            android:id="@+id/swipe_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </android.support.v4.view.ViewPager>

    </android.support.v4.view.ViewPager>




    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <com.github.tlaabs.timetableview.TimetableView
                android:id="@+id/timetable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:forceHasOverlappingRendering="true"
                app:column_count="4"
                app:header_highlight_image="@drawable/button_background"
                app:header_highlight_image_size="36dp"
                app:header_highlight_type="image"
                app:header_title="@array/header_title"
                app:row_count="25"
                app:start_time="0"/>

        <com.github.tlaabs.timetableview.TimetableView
            android:id="@+id/timetable2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:forceHasOverlappingRendering="true"
            app:column_count="5"
            app:header_highlight_image="@drawable/button_background"
            app:header_highlight_image_size="36dp"
            app:header_highlight_type="image"
            app:header_title="@array/header_title"
            app:row_count="25"
            app:start_time="0"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/timetable_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:clickable="true"
            android:src="@drawable/add_50"
            app:layout_anchorGravity="bottom|right|end"
            app:useCompatPadding="true" />
    </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>